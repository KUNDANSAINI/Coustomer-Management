<!DOCTYPE html>
<html lang="en">
<%-include('../particals/user/head.ejs')%>

    <body>
        <!-- Header Start To Here -->
        <%-include('../particals/user/header.ejs')%>
            <!-- Header End To Here -->

            <!-- Mid Start To Here -->
            <section id="mid">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <h2 class="text-center mt-2">Profile Update!!</h2>
                            <h4><img style="width: 50px;" src="/storage/<%=image%>" alt=""> <%=loginame%></h4>
                                <p><%=message%></p>
                                <form action="/myprofile/<%=prodata.id%>" method="post" enctype="multipart/form-data">
                                    <label for="">First Name</label>
                                    <input type="text" name="ffname" id="" class="form-control" value="<%=prodata.fname%>">
                                    <label for="">Last Name</label>
                                    <input type="text" name="lname" id="" class="form-control mb-2" value="<%=prodata.lname%>">
                                    <label for="">Date Of Birth?</label>
                                    <input type="date" name="dob" id="" class="form-control text-uppercase" value="<%=prodata.dob%>">
                                    <label for="" class="mt-2">Mobile Number</label>
                                    <input type="number" name="mob" id="" class="form-control mb-2" value="<%=prodata.mob%>">
                                    <label for="">Gender</label>
                                    <div>
                                        <input type="radio" name="gender" id="" value="male" class="form-select-input" <%=prodata.gender=='male'?'checked':''%>>
                                        <label for="" class="form-select-label">Male</label>
                                    </div>
                                    <div class="mb-2">
                                        <input type="radio" name="gender" id="" value="female" class="form-select-input" <%=prodata.gender=='female'?'checked':''%>>
                                        <label for="" class="form-select-label">Female</label>
                                    </div>
                                    <label for="">Image Update</label>
                                    <input type="file" name="img" id="" class="form-control mb-2" value="<%=prodata.img%>">
                                    <button type="reset" class="btn btn-danger">Cancel</button><button type="submit" class="btn btn-success" style="float: right;">Profile Update</button>
                                </form>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                </div>
            </section>
            <!-- Mid End To Here -->

            
    </body>

</html>