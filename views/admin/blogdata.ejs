<!DOCTYPE html>
<html lang="en">
<%-include('../../particals/admin/head.ejs')%>

    <body>
        <%-include('../../particals/admin/header.ejs')%>

            <section id="mid">
                <div class="container">
                    <div class="row">
                        <%-include('../../particals/admin/left.ejs')%>
                        <div class="col-md-9">
                            <h2 class="text-center">All Blogs Managment</h2>
                            <table class="table table-hover">
                                <tr>
                                    <th>Sr.No.</th>
                                    <th>Title</th>
                                    <th>Quotes</th>
                                    <th>PostedBy</th>
                                    <th>PostedDate</th>
                                    <th>Status</th>
                                    <th>Delete</th>
                                </tr>
                                <%alldata.forEach((value,key)=>{%>
                                    <tr>
                                        <td><%=key+1%></td>
                                        <td><%=value.title%></td>
                                        <td><%=value.queots%></td>
                                        <td><%=value.postedBy%></td>
                                        <td><%=value.postedDate%></td>
                                        <%if(value.status=='Published'){%>
                                        <td><a href="/admin/statusupdate/<%=value.id%>"><button class="btn btn-success">Published</button></a></td>
                                        <%}else{%>
                                        <td><a href="/admin/statusupdate/<%=value.id%>"><button class="btn btn-danger">Unpublished</button></a></td>
                                        <%}%>
                                        <td><a href="/admin/adminblogdelete/<%=value.id%>"><button class="btn btn-danger">Delete</button></a></td>
                                    </tr>
                                <%})%>
                            </table>
                        </div>
                    </div>
                </div>
            </section>
        <%-include('../../particals/admin/footer.ejs')%>
    </body>

</html>